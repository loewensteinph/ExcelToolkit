@model IEnumerable<toolkit.excel.data.ColumnMapping>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SourceColumn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TargetColumn)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SourceColumn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TargetColumn)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ColumnMappingId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ColumnMappingId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ColumnMappingId })
        </td>
    </tr>
}

</table>
