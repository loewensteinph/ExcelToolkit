@model IEnumerable<toolkit.excel.data.ExcelDefinition>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SheetName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Range)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TargetTable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConnectionString)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HasHeaderRow)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FileName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SheetName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Range)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TargetTable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ConnectionString)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HasHeaderRow)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DefinitionId }) |
            @Html.ActionLink("Details", "Details", new { id=item.DefinitionId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DefinitionId })
        </td>
    </tr>
}

</table>
